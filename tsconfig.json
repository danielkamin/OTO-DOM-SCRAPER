{
    "compilerOptions": {
      "target": "ES6",
      "module": "CommonJS",
      "moduleResolution": "node",
      "rootDir": "src",
      "outDir": "dist",
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitAny": true,
      "baseUrl": ".",
      "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
    },
    "include": ["src/**/*"]
  }
